{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~src/*": ["src/*"],
        },
        "types": [
            "vitest/globals",
             "vitest/importMeta"
          ],  
        "moduleResolution": "node",
        "target": "esnext",
        "module": "esnext",
        "lib": ["ESNext"],
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitAny": true,
        "noUncheckedIndexedAccess": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },  
}